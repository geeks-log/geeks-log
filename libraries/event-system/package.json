{
  "name": "@geeks-log/event-system",
  "version": "1.0.2",
  "description": "Event system utilities for Event-Sourcing, Redux-like systems etc.",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist/",
    "esm/",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/geeks-log/geeks-log.git",
    "directory": "libraries/event-system"
  },
  "scripts": {
    "build": "rm -rf dist/ && rm -rf esm/ && tsc -p tsconfig.build.json && tsc -p tsconfig.esm.json",
    "lint": "geeks-log-eslint -c .eslintrc.js '{src,test}/**/*.ts'",
    "test": "npm run lint && tsc --noEmit && jest --reporters=jest-standard-reporter"
  },
  "devDependencies": {
    "@types/jest": "^24.0.22",
    "@types/node": "^10.17.5",
    "@geeks-log/eslint": "0.0.1",
    "@geeks-log/typescript": "0.0.0",
    "jest": "^24.9.0",
    "jest-standard-reporter": "^1.0.2",
    "ts-jest": "^24.1.0",
    "typescript": "~3.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test/",
    "testRegex": ".spec.ts$",
    "moduleDirectories": [
      "node_modules/",
      "src/"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "packageJson": "package.json",
        "tsConfig": "tsconfig.spec.json"
      }
    }
  }
}
